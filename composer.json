{
  "name": "presprog/kirby-helpers",
  "description": "Provides some tiny helper functions we use frequently in our Kirby projects",
  "require": {
    "php": "^8.2",
    "ext-simplexml": "*",
    "getkirby/composer-installer": "^1.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0.0",
    "getkirby/cms": "^4.0"
  },
  "scripts": {
    "test": "@php vendor/bin/phpunit tests --bootstrap tests/bootstrap.php"
  },
  "config": {
    "allow-plugins": {
      "getkirby/composer-installer": true
    }
  },
  "extra": {
    "kirby-cms-path": false
  }
}
